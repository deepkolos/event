{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2,
      { "ignoredNodes": ["ConditionalExpression"] }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "no-debugger": "off"
  }
}